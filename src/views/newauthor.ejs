	</head>
	<body id="back" background="https://i.pinimg.com/originals/01/00/3a/01003af3cacf7f7eb9e643367a389b86.jpg">
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
          <% for(i=0;i<navigate.length;i++){%>

        <li>
          <a href="<%=navigate[i].link%>"><%=navigate[i].name%></a>
        </li>
        <%}%>
      </ul>
    </header>
      <div class="container-fluid">
  
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
          
            <div class="col-md-4 col-sm-4 col-xs-12">
              
              <form id="log" method="POST" action="/authors/newauthor/addauthor"> 
                 <h2>NEW AUTHOR ADDITION</h2><br>
                
                <div class="form-group">
                  <label>Name of the Author</label>
                  <input type ="text" class="form-control" name="name">   
                </div>
                <div class="form-group">
                  <label>Genre of the Author's Book</label>
                  <input type ="text" class="form-control" name="genre">
                </div>
                <div class="form-group">
                  <label>Author Book(1)</label>
                  <input type ="text" class="form-control" name="book1">  
                </div> 
                <div class="form-group">
                  <label>Author Book(2)</label>
                  <input type ="text" class="form-control" name="book2">  
                </div> 
                <div class="form-group">
                  <label>Add Image</label>
                <input type ="file"name="image">
                
                </div>
                <button id="submits">Add</button>
              </form>
            </div>
               
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
           
      </div>
     
	<!-- script references -->
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
